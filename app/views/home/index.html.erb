<div class="container">
<% if current_user %>
  Logged in as <%= current_user.email %>.
  <%= link_to "Log Out", logout_path %>
<% else %>
  <%= link_to "Sign Up", signup_path %> or
  <%= link_to "Log In", login_path %> to create and answer surveys!
<% end %>
<h1>Apple Survey</h1>
<p>Simple Rails app for creating surveys.</p>
<%= render "survey_templates/index", collection: @survey_templates, as: :survey_templates%>
</div>