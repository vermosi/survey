<div class="container">

<h1>Surveys</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Question</th>
      <th>Answer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @surveys.each do |survey| %>
      <tr>
        <td><%= survey.question %></td>
        <td><%= survey.answer %></td>
        <td><%= link_to 'Show', survey %></td>
        <% if session["user_id"] != nil %>
          <td><%= link_to 'Edit', edit_survey_path(survey) %></td>
          <td><%= link_to 'Destroy', survey, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Survey', new_survey_template_survey_path, class: "btn btn-primary" %>
</div>